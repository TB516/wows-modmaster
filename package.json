{
	"name": "dockyard-mod-manager",
	"version": "1.0.0",
	"type": "module",
	"description": "Unofficial mod manager for World of Warships",
	"scripts": {
		"dev": "concurrently \"vite\" \"electrobun build && electrobun dev\" --kill-others",
		"build": "vite build && electrobun build",
		"build:prod": "bun run build --env=stable",
		"lint": "eslint --fix .",
		"format": "prettier --write ."
	},
	"dependencies": {
		"electrobun": "1.14.4",
		"sv-router": "^0.14.0"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/bun": "1.3.9",
		"concurrently": "^9.1.0",
		"eslint": "^10.0.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.15.0",
		"globals": "^17.4.0",
		"jiti": "^2.6.1",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.5.0",
		"svelte": "^5.53.6",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.56.1",
		"vite": "^7.3.1"
	}
}
